{# Display a button #}

{# @param type ?string Button type (link/submit) #}
{# @param url ?string required for type link  #}
{# @param caption string #}

{% set type = type ?? 'link' %}
{% set target = target ?? null %}

{#
You may think of using Tailwind's @apply statement here.
We would recommend to avoid it and build properly designed components.
#}

{% if type == 'link' %}

    <a class="block no-underline font-normal bg-white border border-slate-300 hover:bg-slate-200 transition-colors shadow-md px-3 py-1.5 rounded-sm"
            {{ target ? "target='#{target}'" }}
       href="{{ url }}">{{ caption }}</a>

{% endif %}

{% if type == 'submit' %}

    <button type="submit"
            class="block bg-slate-700 text-white border border-slate-300 hover:bg-slate-900 transition-colors shadow-md px-3 py-1.5 rounded-sm"
    >{{ caption }}</button>

{% endif %}