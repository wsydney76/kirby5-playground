{# Opting out of Tailwinds prose styling and doing our own thing.  #}

{# @param block Block #}

{% set style = block.style ?? 'default' %}

<div class="my-8 not-prose">
    {% if style == 'bordersTopBottom' %}

        <blockquote class="lg:-mx-24 border-t-2 border-b-2 border-slate-900 py-6 text-slate-900 text-center">
            <div class="text-2xl uppercase">
                {# Use static translations for language-specific quotation marks #}
                {# There is a <q> element, but that is not intended for use inside a <blockquote> #}
                {{ '“'|t }}{{ block.text|nl2br }}{{ '”'|t }}
            </div>
            {% if block.citation %}
                <cite class="block mt-8 text-lg italic">
                    {{ block.citation }}
                </cite>
            {% endif %}
        </blockquote>

    {% else %}
        {% include '_blocks/quote.twig' %}
    {% endif %}

</div>



